<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hk.mapper.ForumArticleAttachmentDownloadMapper">
	<!--实体映射-->
	<resultMap id="base_result_map" type="com.hk.entity.po.ForumArticleAttachmentDownload">
		<!--文件ID-->
		<result column="file_id" property="fileId"/>

		<!--用户id-->
		<result column="user_id" property="userId"/>

		<!--文章ID-->
		<result column="article_id" property="articleId"/>

		<!--文件下载次数-->
		<result column="download_count" property="downloadCount"/>

	</resultMap>


	<!--通用查询结果列-->
	<sql id="base_column_list">
		file_id,user_id,article_id,download_count
	</sql>

	<!--基础查询条件-->
	<sql id="base_query_condition">
		<if test="query.fileId != null and query.fileId != ''">
			and file_id = #{query.fileId}
		</if>
		<if test="query.userId != null and query.userId != ''">
			and user_id = #{query.userId}
		</if>
		<if test="query.articleId != null and query.articleId != ''">
			and article_id = #{query.articleId}
		</if>
		<if test="query.downloadCount != null">
			and download_count = #{query.downloadCount}
		</if>
	</sql>

	<!--扩展的查询条件-->
	<sql id="base_query_condition_extend">
		<if test="query.fileIdFuzzy != null and query.fileIdFuzzy !=''">
			and file_id like concat('%', #{query.fileIdFuzzy}, '%')
		</if>
		<if test="query.userIdFuzzy != null and query.userIdFuzzy !=''">
			and user_id like concat('%', #{query.userIdFuzzy}, '%')
		</if>
		<if test="query.articleIdFuzzy != null and query.articleIdFuzzy !=''">
			and article_id like concat('%', #{query.articleIdFuzzy}, '%')
		</if>
	</sql>

	<!--通用查询条件-->
	<sql id="query_condition">
		<where>
			<include refid="base_query_condition"/>
			<include refid="base_query_condition_extend"/>
		</where>
	</sql>

	<!--查询列表-->
	<select id="selectList" resultMap="base_result_map">
		select 
		<include refid="base_column_list"/> 
		from forum_article_attachment_download
		<include refid="query_condition"/>
		<if test="query.orderBy != null">
		order by ${query.orderBy}
		</if>
		<if test="query.simplePage != null">
		limit #{query.simplePage.start}, #{query.simplePage.end}
		</if>
	</select>

	<!--查询数量-->
	<select id="selectCount" resultType="java.lang.Integer">
		select count(1) from forum_article_attachment_download <include refid="query_condition"/>
	</select>

	<!--插入（匹配有值的字段）-->
	<insert id="insert" parameterType="com.hk.entity.po.ForumArticleAttachmentDownload">
		<trim prefix="insert into forum_article_attachment_download(" suffix=")" suffixOverrides=",">
			<if test="bean.fileId != null">
				file_id,
			</if>
			<if test="bean.userId != null">
				user_id,
			</if>
			<if test="bean.articleId != null">
				article_id,
			</if>
			<if test="bean.downloadCount != null">
				download_count,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="bean.fileId != null">
				#{bean.fileId},
			</if>
			<if test="bean.userId != null">
				#{bean.userId},
			</if>
			<if test="bean.articleId != null">
				#{bean.articleId},
			</if>
			<if test="bean.downloadCount != null">
				#{bean.downloadCount},
			</if>
		</trim>
	</insert>

	<!--插入或者更新（匹配有值的字段）-->
	<insert id="insertOrUpdate" parameterType="com.hk.entity.po.ForumArticleAttachmentDownload">
		<trim prefix="insert into forum_article_attachment_download(" suffix=")" suffixOverrides=",">
			<if test="bean.fileId != null">
				file_id,
			</if>
			<if test="bean.userId != null">
				user_id,
			</if>
			<if test="bean.articleId != null">
				article_id,
			</if>
			<if test="bean.downloadCount != null">
				download_count,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="bean.fileId != null">
				#{bean.fileId},
			</if>
			<if test="bean.userId != null">
				#{bean.userId},
			</if>
			<if test="bean.articleId != null">
				#{bean.articleId},
			</if>
			<if test="bean.downloadCount != null">
				#{bean.downloadCount},
			</if>
		</trim>
		on duplicate key update
		<trim prefix="" suffix="" suffixOverrides=",">
			<if test="bean.articleId != null">
				article_id = #{bean.articleId},
			</if>
			<if test="bean.downloadCount != null">
				download_count = #{bean.downloadCount},
			</if>
		</trim>
	</insert>

	<!--批量插入-->
	<insert id="insertBatch" parameterType="com.hk.entity.po.ForumArticleAttachmentDownload">
		insert into forum_article_attachment_download(file_id,user_id,article_id,download_count) values
		<foreach collection="list" item="item" separator=",">
		(#{item.fileId},#{item.userId},#{item.articleId},#{item.downloadCount})
		</foreach>
	</insert>

	<!--批量插入或者更新-->
	<insert id="insertOrUpdateBatch" parameterType="com.hk.entity.po.ForumArticleAttachmentDownload">
		insert into forum_article_attachment_download(file_id,user_id,article_id,download_count) values
		<foreach collection="list" item="item" separator=",">
		(#{item.fileId},#{item.userId},#{item.articleId},#{item.downloadCount})
		</foreach>
		on duplicate key update
		file_id=values(file_id),
		user_id=values(user_id),
		article_id=values(article_id),
		download_count=values(download_count)
	</insert>

	<!--根据FileIdAndUserId查询-->
	<select id="selectByFileIdAndUserId" resultMap="base_result_map" >
		select
		<include refid="base_column_list"/>
		from forum_article_attachment_download
		where file_id=#{file_id} and user_id=#{user_id}
	</select>

	<!--根据FileIdAndUserId更新-->
	<update id="updateByFileIdAndUserId" parameterType="com.hk.entity.po.ForumArticleAttachmentDownload">
		update forum_article_attachment_download
		<set>
			<if test="bean.fileId!=null">
			file_id=#{bean.fileId},
			</if>
			<if test="bean.userId!=null">
			user_id=#{bean.userId},
			</if>
			<if test="bean.articleId!=null">
			article_id=#{bean.articleId},
			</if>
			<if test="bean.downloadCount!=null">
			download_count=#{bean.downloadCount}
			</if>
		</set>
		where file_id=#{file_id} and user_id=#{user_id}
	</update>

	<!--根据FileIdAndUserId删除-->
	<delete id="deleteByFileIdAndUserId">
		delete from forum_article_attachment_download
		where file_id=#{file_id} and user_id=#{user_id}
	</delete>



</mapper>